= list_title

%table.records
  %tr
    %th
      = resource_class.human_attribute_name :name
    %th      
      = resource_class.human_attribute_name :version
    %th

  - collection.each do |resource|
    %tr
      %td
        = resource.name
      %td
        = resource.version
      %td
        = edit_link_to resource
        = destroy_link_to resource
        = link_to Table.model_name.human, database_tables_path(resource), :class => 'button'

%br 

