= form_for(resource, :url => resource_form_path) do |f| 
  - if resource.errors.any?
    %div#error_explanation
      %h2
        #{pluralize(resource.errors.count, "error") } prohibited this precondition from being saved:

      %ul
        - resource.errors.full_messages.each do |msg| 
          %li
            = msg

  %div.field
    = f.label :flow
    %br
    = f.text_field :flow 

  %div.field
    = f.label :order
    %br
    = f.text_field :order

  %div.actions
    = f.submit 
    = back_link_to