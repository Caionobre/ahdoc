= form_for(resource, :url => resource_form_path) do |f|
  = if resource.errors.any?
    %div#error_explanation
      %h2
        = pluralize(resource.errors.count, "error")
        prohibited this system from being saved:

      %ul
        - resource.errors.full_messages.each do |msg|
          %li
            = msg

  %div.field
    = f.label :name
    %br
    = f.text_field :name

  %div.field
    = f.label :storage_type
    %br
    = f.select :storage_type, Constant::Field::StorageType.to_a

  %div.field
    = f.label :description
    %br
    = f.text_area :description, :rows => 5

  %div.field
    = f.label :default
    %br
    = f.text_field :default

  %div.field
    = f.label :length
    %br
    = f.text_field :length

  %div.field
    = f.checkbox :nullable
    = f.label :nullable

  %div.field
    = f.checkbox :auto_increment
    = f.label :auto_increment

  %div.actions
    = f.submit
    = back_link_to